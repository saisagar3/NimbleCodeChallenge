<%= form_for(@user, as: 'user', url: @user, method: 'post') do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>
  

  <div class="field form-group">
    <%= f.label :first_name, "First Name" %><br />
    <%= f.text_field :first_name, autocomplete: "first name", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name , "Last Name"%><br />
    <%= f.text_field :last_name, autocomplete: "last name", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :institute_id, "Institute ID" %><br />
    <%= f.text_field :institute_id, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :citizen_id, "Citizen ID" %><br />
    <%= f.text_field :citizen_id, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :email, "Email ID" %><br />
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Create User", class: 'btn btn-primary' %>
  </div>
<% end %>
<br>