<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.first_name, user %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Student', new_user_path, class: 'btn btn-success' %>