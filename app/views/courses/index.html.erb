<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.course_name, course %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.Instructor? %>
<%= link_to 'New Course', new_course_path %>
<% end %>