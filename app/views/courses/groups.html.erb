<h2>Groups</h2>

<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th style="text-align:center">Name</th>
      <th style="text-align:center">Number of Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td style="text-align:center"><%= link_to group.name, group %></td>
        <td style="text-align:center"><%=  Group.subscribers.includes(:user).where("users.role = ").references(:users).count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
