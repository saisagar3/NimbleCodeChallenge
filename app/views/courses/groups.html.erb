<p id="notice"><%= notice %></p>

<h2>Groups</h2>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%=  group.subscribers.includes(:user).where("users.role = 1").references(:users).count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_course_path(@course)%>